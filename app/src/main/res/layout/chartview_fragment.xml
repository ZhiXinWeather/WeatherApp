<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:background="@mipmap/chart_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey400">

        <CustomView.WeatherChartView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:dayColor="@color/yellow"
            app:nightColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/id_chartview_weatherChartView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="气温趋势图"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_above="@+id/id_chartview_weatherChartView"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />
    </RelativeLayout>
</LinearLayout>