<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/id_air_item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/id_air_item_station"
            android:layout_weight="1"
            android:text="监测站"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black_alpha_30"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/id_air_item_aqi"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/black_alpha_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/id_air_item_quality"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="优"
            android:textColor="@color/black_alpha_30"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>