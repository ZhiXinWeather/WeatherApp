<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_width="200dp"
    android:layout_marginLeft="20dp"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_search_item_imageview"
        android:src="@mipmap/monday"
        android:scaleType="fitXY"
        android:layout_above="@+id/linearLayout" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_alpha_12"/>
    </FrameLayout>
<RelativeLayout
    android:id="@+id/id_search_relativelayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_search_item_temperature"
        android:text="30"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/id_search_item_temperature"
        android:layout_toEndOf="@+id/id_search_item_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:text="城市"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:id="@+id/id_search_item_city"
        android:layout_below="@+id/id_search_item_temperature"
        android:layout_alignStart="@+id/id_search_item_temperature" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_below="@+id/id_search_item_city"
    android:layout_alignStart="@+id/id_search_item_temperature"
    android:layout_height="wrap_content">
        <TextView
        android:id="@+id/id_search_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
            android:textColor="@color/white"
        android:text="天气"/>
    <TextView
        android:id="@+id/id_search_item_wind_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="风向"/>
</LinearLayout>

</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/grey400"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日期"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/id_search_item_date"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white_half"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="风力等级"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/id_search_item_wind_scale"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white_half"
            />
        <ImageView
            android:id="@+id/id_search_item_weather_image"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/cloudy"/>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>